<?xml version="1.0" encoding="utf-8"?>
<server description="Trellis Server">
    <featureManager>
      <feature>cdi-2.0</feature>
      <feature>jaxrs-2.1</feature>
      <feature>mpConfig-1.3</feature>
      <feature>mpHealth-2.0</feature>
      <feature>mpJwt-1.1</feature>
      <feature>mpMetrics-2.0</feature>
      <!-- TODO - switch to the microprofile feature instead of particular features above -->
      <!--<feature>microProfile-3.0</feature>-->
    </featureManager>
    <logging consoleLogLevel="INFO"/>
    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
      id="defaultHttpEndpoint" host="*">
      <accessLogging filepath="${server.output.dir}/logs/access.log"/>
    </httpEndpoint>
    <webApplication location="trellis-microprofile.war" contextRoot="/"/>
</server>

